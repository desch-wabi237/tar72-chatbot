{
  "version": 2,
  "builds": [
    { "src": "api/**/*.js", "use": "@vercel/node" },
    { "src": "package.json", "use": "@vercel/static-build" }
  ],
  "routes": [
    { 
      "src": "/api/(.*)", 
      "dest": "/api/$1",
      "methods": ["GET", "POST", "OPTIONS"]
    },
    { 
      "src": "/(.*)", 
      "dest": "/index.html" 
    }
  ],
  "env": {
    "GEMINI_API_KEY": "process.env.GEMINI_API_KEY"
  }
}